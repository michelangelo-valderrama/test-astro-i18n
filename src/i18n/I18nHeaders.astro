---
import { getAbsoluteLanguageUrl } from "@i18n/utils"
import { DEFAULT_LANGUAGE, LOCALES, type Lang } from "@i18n/config"

const [, , ...path] = Astro.url.pathname.split("/")
---

<link
  rel="alternate"
  href={getAbsoluteLanguageUrl(DEFAULT_LANGUAGE, path.join("/"))}
  hreflang="x-default"
/>
{
  Object.keys(LOCALES).map((l) => (
    <link
      rel="alternate"
      href={getAbsoluteLanguageUrl(l as Lang, path.join("/"))}
      hreflang={LOCALES[l as keyof typeof LOCALES]}
    />
  ))
}

<meta property="og:locale" content={LOCALES[DEFAULT_LANGUAGE]} />
{
  Object.keys(LOCALES).map((l) => {
    if (l === DEFAULT_LANGUAGE) return
    return (
      <meta
        property="og:locale:alternate"
        content={LOCALES[l as keyof typeof LOCALES]}
      />
    )
  })
}
