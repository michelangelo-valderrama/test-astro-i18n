---
import { LANGUAGES_ARRAY, type Lang } from "@i18n/config"
import { useTranslations } from "@i18n/utils"
import BaseLayout from "@layouts/BaseLayout.astro"

export const getStaticPaths = () => {
  return LANGUAGES_ARRAY.map((lang) => ({
    params: { lang },
  }))
}

const { lang } = Astro.params

const t = useTranslations(lang as Lang, "home")
---

<BaseLayout title={t().head_title}>
  <h1 class="text-4xl font-bold mb-4">{t().title}</h1>
  <p class="text-lg">{t().subtitle}</p>
  <div class="mt-10">
    <img
      class="w-full"
      src="/this-is-fine.gif"
      alt={t("alt_images").home.this_is_fine}
    />
  </div>
</BaseLayout>
